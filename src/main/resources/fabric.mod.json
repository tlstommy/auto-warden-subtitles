{
	"schemaVersion": 1,
	"id": "auto-warden-subtitles",
	"version": "${version}",
	"name": "Auto Warden Subtitles",
	"description": "This mod automatically turns on subtitles when entering the Deep Dark, making it easier to detect any nearby Wardens.",
	"authors": [
		"Thomas Smith"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/tlstommy/auto-warden-subtitles"
	},
	"license": "MIT",
	"icon": "assets/auto-warden-subtitles/icon.png",
	"environment": "client",
	"entrypoints": {

		"client": [
          "tls.autowardensubtitles.AutoWardenSubtitles"
		]
	},
	"mixins": [
		"auto-warden-subtitles.mixins.json",
		{
			"config": "auto-warden-subtitles.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": ">=1.20",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}